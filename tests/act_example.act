state life {

    entry {
        int time = 0;
        int stamina = 100;
    }

    exit {
        time = 0;
        stamina = 0;
    }

    state work {
        on TIRED(myval, myval2) {
            if(time == 23) moveto rest {
                stamina = 0;
            }
        }

        on BORED {
            moveif(true) fun {}
            else moveif(someother condition) moveto other {}
            else moveto other2 {}
        }
    }

    state fun {
        on BORED {
            if(true) moveto work {}
        }

        on TIRED {
            if(true) moveto rest {}
        }
    }

    state rest {
        on AWAKE {
            if(time == 6) moveto work {
                stamina = 100;
            }
        }
    }
}