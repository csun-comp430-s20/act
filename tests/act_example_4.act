defstate life;
defstate work;
defstate rest;

defevent TIRED {};
defevent AWAKE {};

state life {

    int time = 0;
    int age = 0;

    on AWAKE {
        goif(time == 0) work {}
    }

    state work {
        on TIRED {
            goif(age == 100) life {
                exit(0);
            } goelif(time == 17) rest {
                time = time + 1;
            } goelse work {
                time = time + 1;
            }
        }
    }

    state rest {
        on AWAKE {
            goif(time == 24) work {
                time = 0;
                age = age + 1;
            }  goelse rest {
                time = time + 1;
            }
        }
    }
}